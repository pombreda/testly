{
	"filename": "phonebook",
	"watch": [
		{
			"path": "./src/",
		},
		{
			"path": "./util/",
			"recursive": false
		}
	],
	"tests": [
		{
			"before": "Do you want to print all entries? (y/n)",
			"cases": [
				{
					"it_should": "sort the entries into alphabetical order by name",
					"input": [
						"Tom 123",
						"Bob 345",
						"Jim 678"
					],
					"output": [
						"Bob 345",
						"Jim 678",
						"Tom 123"
					]
				},
				{
					"it_should": "combine entries with the same name",
					"input": [
						"Tom 123",
						"Tom 345",
						"Jim 678"
					],
					"output": [
						"Jim 678",
						"Tom 123 345"
					]
				}
			]
		},
		{
			"cases": [
				{
					"it_should": "allow the user to search for entries",
					"line_separator": " ",
					"input": [
						"Tom 123",
						"Bob 345",
						"Jim 678",
						"!",
						"jim"
					],
					"output": [
						"What name?",
						"Jim 678"
					]
				}
			]
		}
	]
}
